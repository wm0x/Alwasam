generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id                    String    @id @default(cuid())
  name                  String?
  username              String? 
  phone                 String?
  image                 String?
  password              String?
  type                  String?
  @@map("users")
}


